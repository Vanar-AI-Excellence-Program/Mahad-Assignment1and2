# =============================================================================
# REQUIRED ENVIRONMENT VARIABLES FOR AUTHFLOW
# =============================================================================
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database_name
# Example: postgresql://myuser:mypassword@localhost:5432/authflow
DATABASE_URL="postgresql://username:password@localhost:5432/authflow"

# =============================================================================
# AUTHENTICATION SECRETS (REQUIRED)
# =============================================================================
# This is the most important secret - generate a strong random string
# You can generate one using: openssl rand -base64 32
# Or use: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
AUTH_SECRET="your-super-secret-auth-key-here-minimum-32-characters"

# Base URL for your application (used for Auth.js callbacks)
# For development: http://localhost:5173 (or whatever port you're using)
# For production: https://your-domain.com
AUTH_URL="http://localhost:5173"

# =============================================================================
# GMAIL CONFIGURATION (FOR EMAIL FEATURES - PHASE 3)
# =============================================================================
# Your Gmail address
GMAIL_USER="your-email@gmail.com"

# Gmail App Password (NOT your regular Gmail password)
# To get this:
# 1. Enable 2-Factor Authentication on your Google account
# 2. Go to Google Account settings → Security → 2-Step Verification
# 3. Click "App passwords" → Generate password for "Mail"
# 4. Use the generated 16-character password here
GMAIL_APP_PASSWORD="your-16-character-app-password"

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Public URL for your application (used for email links)
# Should match AUTH_URL in most cases
PUBLIC_APP_URL="http://localhost:5173"

# =============================================================================
# OPTIONAL: ADDITIONAL SECURITY (RECOMMENDED FOR PRODUCTION)
# =============================================================================
# OAuth Providers (optional)
# Google
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Additional encryption key for sensitive data (optional but recommended)
# Generate using: openssl rand -base64 32
ENCRYPTION_KEY="optional-encryption-key-for-sensitive-data"

# =============================================================================
# DEVELOPMENT ONLY (OPTIONAL)
# =============================================================================
# Set to "true" to enable debug logging
DEBUG="false"

# =============================================================================
# PRODUCTION SETTINGS (WHEN DEPLOYING)
# =============================================================================
# Set to "true" in production for additional security
NODE_ENV="development" 