{
	"name": "authflow",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"generate-secrets": "node scripts/generate-secrets.js",
		"setup-env": "node scripts/generate-secrets.js --create",
		"test:db": "node tests/test-db.js",
		"test:login": "node tests/test-login-flow.js",
		"test:otp": "node tests/test-otp-flow.js",
		"test:otp-comprehensive": "node tests/test-otp-comprehensive.js",
		"test:csp": "node tests/test-csp.js",
		"check:tables": "node tests/check-tables.js",
		"check:permissions": "node tests/check-permissions.js",
		"fix:permissions": "node tests/fix-db-permissions.js",
		"migrate:createdat": "node tests/migrate-add-createdat.js",
		"test:simple": "node tests/simple-test.js",
		"test:forking": "node test-forking-system.js",
		"docker:up": "docker-compose up -d",
		"docker:down": "docker-compose down",
		"docker:restart": "docker-compose restart",
		"docker:logs": "docker-compose logs -f postgres",
		"docker:status": "docker-compose ps",
		"docker:clean": "docker-compose down -v",
		"docker:rebuild": "docker-compose down && docker-compose up -d --build",
		"db:setup": "npm run docker:up && sleep 5 && npm run db:migrate",
		"rag:up": "docker compose up -d",
		"rag:down": "docker compose down",
		"rag:logs": "docker compose logs -f",
		"rag:status": "docker compose ps",
		"rag:test": "curl -X POST http://localhost:8000/embed -H 'Content-Type: application/json' -d '{\"text\": \"test\"}'"
	},
	"devDependencies": {
		"@sveltejs/adapter-vercel": "^4.0.5",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@types/bcryptjs": "^2.4.6",
		"@types/nodemailer": "^6.4.17",
		"@types/pdf-parse": "^1.1.5",
		"autoprefixer": "^10.4.21",
		"drizzle-kit": "^0.31.4",
		"postcss": "^8.5.6",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^3.4.17",
		"typescript": "^5.0.0",
		"vite": "^7.0.4"
	},
	"dependencies": {
		"@ai-sdk/google": "^2.0.6",
		"@ai-sdk/svelte": "^3.0.14",
		"@sveltejs/kit": "^2.0.0",
		"ai": "^5.0.14",
		"bcryptjs": "^2.4.3",
		"dotenv": "^17.2.1",
		"drizzle-orm": "^0.44.4",
		"nodemailer": "^6.9.7",
		"patch-package": "^8.0.0",
		"pdf-parse": "^1.1.1",
		"pnpm": "^10.14.0",
		"postgres": "^3.4.3",
		"svelte": "^5.0.0",
		"zod": "^3.25.76"
	}
}
