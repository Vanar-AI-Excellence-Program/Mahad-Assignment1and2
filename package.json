		"postcss": "^8.5.6",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^3.4.17",
		"typescript": "^5.0.0",
		"vite": "^7.0.4"
	},
	"dependencies": {
		"@auth/core": "^0.40.0",
		"@auth/drizzle-adapter": "^1.10.0",
		"@auth/sveltekit": "^1.10.0",
		"bcryptjs": "^3.0.2",
		"dotenv": "^17.2.1",
		"drizzle-orm": "^0.44.4",
		"nodemailer": "^6.10.1",
		"postgres": "^3.4.7",
		"zod": "^4.0.15"
	}
